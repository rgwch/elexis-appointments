# Connection string to the Elexis database
database="mysql://user:password@elexisserver:3306/elexis"

# The department or area for appointments
bereich="Arzt"

# Minimum free minutes required for a slot
minFreeMinutes=30

# Default duration for an appointment
defaultAppointmentDuration=15

# Type of appointment to be booked
TerminTyp="Internet"

# State for newly created appointments
CreatedState="geplant"

# State for cancelled appointments
CancelledState="abgesagt"

# JWT secret for MikroREST authentication. Should be unique for each app instance
# So: Don't use this default value in production!
MICROREST_JWT_SECRET="something private for your app instance"

# backend server listening port
PORT=3000
# frontend development server port
VITE_PORT=3000

# Work hours configuration (in hours, 24-hour format)
workStart=8
workEnd=18

# URL of this application
URL="https://appointments.example.com/"

# smtp server to send mails
SMTP_SERVER="smtp.example.com"
# Only ssl supported currently
SMTP_PORT=465
SMTP_USER="someuser"
SMTP_PASSWORD="somepassword"
EMAIL_FROM="no-reply@example.com"

# Optional: Path to custom email templates JSON file
# If not set, uses email-templates.json in project root
# EMAIL_TEMPLATES_PATH="/path/to/custom-templates.json"
